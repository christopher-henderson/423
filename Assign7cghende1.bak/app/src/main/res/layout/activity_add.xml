<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="add">

    <TextView
        android:text="Check button in action bar saves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_marginStart="16dp"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/address_title"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Street Address"
        android:ems="10"
        android:id="@+id/address_street"
        android:layout_below="@+id/address_title"
        android:layout_alignStart="@+id/address_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="Elevation"
        android:ems="10"
        android:id="@+id/elevation"
        android:layout_below="@+id/address_street"
        android:layout_alignStart="@+id/address_street" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="Latitude"
        android:ems="10"
        android:id="@+id/latitude"
        android:layout_below="@+id/elevation"
        android:layout_alignStart="@+id/elevation" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="Longitude"
        android:ems="10"
        android:id="@+id/longitude"
        android:layout_centerVertical="true"
        android:layout_below="@+id/latitude"
        android:layout_alignStart="@+id/latitude" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Image"
        android:ems="10"
        android:id="@+id/image"
        android:layout_below="@+id/longitude"
        android:layout_alignStart="@+id/longitude" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Description"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/description"
        android:layout_below="@+id/image"
        android:layout_alignStart="@+id/image" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Category"
        android:ems="10"
        android:layout_below="@+id/description"
        android:layout_alignEnd="@+id/description"
        android:layout_marginTop="15dp"
        android:id="@+id/category" />

</RelativeLayout>
